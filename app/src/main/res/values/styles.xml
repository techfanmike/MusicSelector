<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ArtistTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="AlbumTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_below">@id/artistName</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="SongTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_below">@id/albumName</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginStart">16dp</item>
    </style>

    <style name="ArtistTextPlayerStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:paddingTop">48dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="AlbumTextPlayerStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_below">@id/artistNamePlayer</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">48dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_centerHorizontal">true</item>
    </style>

    <style name="SongTextPlayerStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_above">@id/PlayButton</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="PlayButtonStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:contentDescription">@string/play_button_description</item>
    </style>

    <style name="BackgroundStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#ffffff</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:contentDescription">@string/background_description</item>
    </style>
</resources>
